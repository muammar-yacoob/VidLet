{
  "name": "@spark-apps/vidlet",
  "version": "1.0.0",
  "description": "Video utility toolkit with Windows shell integration - compress, convert, GIF, loops, and more",
  "type": "module",
  "bin": {
    "vidlet": "./dist/cli.js"
  },
  "files": [
    "dist",
    "icons",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "video",
    "ffmpeg",
    "compress",
    "gif",
    "loop",
    "convert",
    "wsl",
    "windows",
    "context-menu"
  ],
  "author": "spark-apps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/muammar-yacoob/VidLet.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "figlet": "^1.9.4",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.10.7",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
