<html>
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>VidLet</title>
<hta:application
  id="VidLetLoader"
  applicationName="VidLet"
  border="none"
  borderStyle="none"
  caption="no"
  innerBorder="no"
  maximizeButton="no"
  minimizeButton="no"
  showInTaskbar="no"
  singleInstance="yes"
  scroll="no"
  contextMenu="no"
  selection="no"
  sysmenu="no"
/>
<style>
  *{margin:0;padding:0}
  html,body{height:100%;overflow:hidden;background:linear-gradient(180deg,#0a0a0c 0%,#111113 100%);transition:opacity .4s ease-out}
  body.fade-out{opacity:0}
  body{font-family:Segoe UI,sans-serif;color:#e4e4e7;text-align:center;padding:24px}
  .logo{width:80px;height:80px;margin-bottom:8px}
  .title{font-size:28px;font-weight:700;color:#a855f7;margin-bottom:2px}
  .tagline{font-size:10px;color:#c084fc;font-weight:600;letter-spacing:1px;text-transform:uppercase;margin-bottom:4px}
  .desc{font-size:10px;color:#636366;margin-bottom:14px}
  .loading{font-size:12px;color:#636366;margin-bottom:6px}
  .progress{font-size:14px;color:#a855f7;font-weight:600;margin-bottom:6px;min-height:18px}
  .progress-bar{width:60%;height:4px;background:#222;border-radius:2px;margin:0 auto 16px auto;overflow:hidden}
  .progress-fill{height:100%;background:linear-gradient(90deg,#a855f7,#c084fc);width:0%;transition:width .2s}
  .divider{width:80%;height:1px;background:#222;margin:0 auto 14px auto}
  .website{font-size:11px;color:#a855f7;text-decoration:none;transition:color .2s}
  .website:hover{color:#c084fc}
</style>
<script language="javascript">
  var w = 280, h = 340;
  window.resizeTo(w, h);
  window.moveTo((screen.availWidth - w) / 2, (screen.availHeight - h) / 2);

  // Failsafe timeout (30 seconds - only if app never signals ready)
  setTimeout(function() { window.close(); }, 30000);

  var fso = new ActiveXObject("Scripting.FileSystemObject");
  var shell = new ActiveXObject("WScript.Shell");
  var tempDir = shell.ExpandEnvironmentStrings("%TEMP%");
  var readyFile = tempDir + "\\vidlet-ready.tmp";
  var progressFile = tempDir + "\\vidlet-progress.tmp";
  var closing = false;
  var lastProgress = -1;

  // Poll for progress and ready signal
  setInterval(function() {
    if (closing) return;

    // Check for progress updates
    if (fso.FileExists(progressFile)) {
      try {
        var f = fso.OpenTextFile(progressFile, 1);
        var pct = parseInt(f.ReadAll(), 10) || 0;
        f.Close();
        if (pct !== lastProgress) {
          lastProgress = pct;
          var progEl = document.getElementById('progress');
          var fillEl = document.getElementById('progress-fill');
          if (progEl) progEl.innerText = 'Caching frames... ' + pct + '%';
          if (fillEl) fillEl.style.width = pct + '%';
        }
      } catch(e) {}
    }

    // Check for ready signal
    if (fso.FileExists(readyFile)) {
      closing = true;
      try { fso.DeleteFile(readyFile); } catch(e) {}
      try { fso.DeleteFile(progressFile); } catch(e) {}
      document.body.className = 'fade-out';
      setTimeout(function() { window.close(); }, 400);
    }
  }, 100);
</script>
</head>
<body>
  <img class="logo" src="../icons/tv.png">
  <div class="title">VidLet</div>
  <div class="tagline">Compress. Convert. Create.</div>
  <div class="desc">Lightweight video tools for content creators</div>
  <div class="loading">Loading your tools...</div>
  <div class="progress" id="progress"></div>
  <div class="progress-bar"><div class="progress-fill" id="progress-fill"></div></div>
  <div class="divider"></div>
  <a class="website" href="#" onclick="shell.Run('https://vidlet.app');return false">vidlet.app</a>
</body>
</html>
