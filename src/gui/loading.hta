<html>
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
<meta http-equiv="Pragma" content="no-cache">
<meta http-equiv="Expires" content="0">
<title>VidLet Loading</title>
<hta:application
  id="VidLetLoader"
  applicationName="VidLet"
  border="none"
  borderStyle="none"
  caption="no"
  innerBorder="no"
  maximizeButton="no"
  minimizeButton="no"
  showInTaskbar="yes"
  singleInstance="yes"
  scroll="no"
  contextMenu="no"
  selection="no"
  sysmenu="no"
/>
<style>
  *{margin:0;padding:0}
  html{height:100%;background:#000}
  body{height:100%;overflow:hidden;background:linear-gradient(180deg,#0a0a0c 0%,#111113 100%);font-family:Segoe UI,sans-serif;color:#e4e4e7;text-align:center;padding:24px;opacity:1;transition:opacity .3s ease-out}
  body.fade-out{opacity:0}
  .logo{width:80px;height:px;margin-bottom:8px}
  .title{font-size:28px;font-weight:700;color:#a855f7;margin-bottom:2px}
  .tagline{font-size:10px;color:#c084fc;font-weight:600;letter-spacing:1px;text-transform:uppercase;margin-bottom:4px}
  .desc{font-size:10px;color:#636366;margin-bottom:14px}
  .loading{font-size:12px;color:#636366;margin-bottom:6px}
  .progress{font-size:14px;color:#a855f7;font-weight:600;margin-bottom:6px;min-height:18px}
  .progress-bar{width:60%;height:4px;background:#222;border-radius:2px;margin:0 auto 16px auto;overflow:hidden}
  .progress-fill{height:100%;background:linear-gradient(90deg,#a855f7,#c084fc);width:0%;transition:width .2s}
  .divider{width:80%;height:1px;background:#222;margin:0 auto 14px auto}
  .website{font-size:11px;color:#a855f7;text-decoration:none;transition:color .2s}
  .website:hover{color:#c084fc}
</style>
<script language="javascript">
  var w = 280, h = 340;
  window.resizeTo(w, h);
  window.moveTo((screen.availWidth - w) / 2, (screen.availHeight - h) / 2);

  var fso = new ActiveXObject("Scripting.FileSystemObject");
  var shell = new ActiveXObject("WScript.Shell");
  var tempDir = shell.ExpandEnvironmentStrings("%TEMP%");
  var readyFile = tempDir + "\\vidlet-ready.tmp";
  var progressFile = tempDir + "\\vidlet-progress.tmp";
  var pollTimer = null;
  var focusTimer = null;
  var lastProgress = -1;
  var progressReceived = false;
  var isClosing = false;

  function closeWindow() {
    if (pollTimer) clearInterval(pollTimer);
    if (focusTimer) clearInterval(focusTimer);
    pollTimer = null;
    focusTimer = null;
    try { fso.DeleteFile(readyFile); } catch(e) {}
    try { fso.DeleteFile(progressFile); } catch(e) {}
    self.close();
  }

  function fadeAndClose() {
    if (isClosing) return;
    isClosing = true;
    if (pollTimer) clearInterval(pollTimer);
    if (focusTimer) clearInterval(focusTimer);
    pollTimer = null;
    focusTimer = null;
    try { fso.DeleteFile(readyFile); } catch(e) {}
    try { fso.DeleteFile(progressFile); } catch(e) {}
    document.body.className = 'fade-out';
    setTimeout(closeWindow, 300);
  }

  // Keep window on top by periodically activating it
  focusTimer = setInterval(function() {
    if (!isClosing) {
      try {
        shell.AppActivate("VidLet Loading");
      } catch(e) {}
    }
  }, 200);

  // Failsafe timeout (45 seconds for long videos)
  setTimeout(closeWindow, 45000);

  // Start polling after a brief delay to allow cleanup and initialization
  setTimeout(function() {
    pollTimer = setInterval(function() {
      // Check for ready signal FIRST (higher priority)
      if (fso.FileExists(readyFile)) {
        fadeAndClose();
        return;
      }

      // Check for progress updates
      if (fso.FileExists(progressFile)) {
        try {
          var f = fso.OpenTextFile(progressFile, 1);
          var content = f.ReadAll();
          f.Close();
          var pct = parseInt(content, 10);
          if (!isNaN(pct) && pct !== lastProgress) {
            lastProgress = pct;
            progressReceived = true;
            var progEl = document.getElementById('progress');
            var fillEl = document.getElementById('progress-fill');
            if (progEl) {
              if (pct === 0) {
                progEl.innerText = 'Preparing video...';
              } else {
                progEl.innerText = 'Caching frames... ' + pct + '%';
              }
            }
            if (fillEl) fillEl.style.width = pct + '%';
          }
        } catch(e) {}
      }
    }, 100);
  }, 500); // 500ms delay before starting to poll
</script>
</head>
<body>
  <img class="logo" src="../icons/tv.png">
  <div class="title">VidLet</div>
  <div class="tagline">Trim • Compose • Publish</div>
  <div class="desc">Lightweight video tools for content creators</div>
  <div class="progress" id="progress"></div>
  <div class="progress-bar"><div class="progress-fill" id="progress-fill"></div></div>
  <div class="divider"></div>
  <a class="website" href="#" onclick="shell.Run('https://vidlet.app');return false">vidlet.app</a>
</body>
</html>
